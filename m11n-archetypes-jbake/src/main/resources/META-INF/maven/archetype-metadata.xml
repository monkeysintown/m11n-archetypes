<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="m11n-archetypes-jbake"
                      xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
                      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <fileSets>
        <fileSet filtered="true" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>LICENSE</include>
                <include>release.sh</include>
                <include>build.sh</include>
                <include>CHANGELOG.md</include>
            </includes>
        </fileSet>
    </fileSets>
    <modules>
        <module id="${rootArtifactId}-assets" dir="__rootArtifactId__-assets" name="${rootArtifactId}-assets">
            <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main/assembly</directory>
                    <includes>
                        <include>**/*.xml</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>app/samples</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>app</directory>
                    <includes>
                        <include>**/*.jade</include>
                    </includes>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>app/parts</directory>
                    <includes>
                        <include>**/*.jade</include>
                    </includes>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>app/styles</directory>
                    <includes>
                        <include>**/*.less</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>app/layouts</directory>
                    <includes>
                        <include>**/*.jade</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>app/scripts</directory>
                    <includes>
                        <include>**/*.js</include>
                    </includes>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>app/views</directory>
                    <includes>
                        <include>**/*.jade</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory></directory>
                    <includes>
                        <include>bower.json</include>
                        <include>package.json</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory></directory>
                    <includes>
                        <include>bower.json</include>
                        <include>package.json</include>
                    </includes>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory></directory>
                    <includes>
                        <include>karma.conf.js</include>
                        <include>.editorconfig</include>
                        <include>.jshintrc</include>
                        <include>karma-e2e.conf.js</include>
                        <include>.bowerrc</include>
                        <include>gulpfile.js</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}-content" dir="__rootArtifactId__-content" name="${rootArtifactId}-content">
            <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main/jbake</directory>
                    <includes>
                        <include>**/*.properties</include>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/jbake</directory>
                    <includes>
                        <include>**/*.ico</include>
                        <include>**/*.png</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main/webapp</directory>
                    <includes>
                        <include>**/*.xml</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main/jbake</directory>
                    <includes>
                        <include>**/header.ftl</include>
                        <include>**/archive.thyme</include>
                        <include>**/index.thyme</include>
                        <include>**/page.thyme</include>
                        <include>**/post.thyme</include>
                    </includes>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/jbake</directory>
                    <includes>
                        <include>**/*.ad</include>
                        <include>**/*.thyme</include>
                        <include>**/*.ftl</include>
                    </includes>
                    <excludes>
                        <exclude>**/header.ftl</exclude>
                        <exclude>**/archive.thyme</exclude>
                        <exclude>**/index.thyme</exclude>
                        <exclude>**/page.thyme</exclude>
                        <exclude>**/post.thyme</exclude>
                    </excludes>
                </fileSet>
            </fileSets>
        </module>
    </modules>
</archetype-descriptor>
